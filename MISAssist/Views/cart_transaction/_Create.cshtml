@model MISAssist.Models.異動記錄
@{
    ViewBag.Title = "Create";
}

<!-- Modal content-->
<div class="modal-header modal-header-primary">
    <button type="button" class="close" aria-label="Close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">碳粉匣［新增］</h4>
</div>

@using (Html.BeginForm("Create", "cart_transaction"))
{
    @Html.AntiForgeryToken()

    <div class="modal-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.單價, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.單價, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.單價, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.數量, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.數量, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.數量, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.廠商, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.廠商, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.廠商, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.入出, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.入出, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.入出, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.日期, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.日期, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.日期, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
    </div>
    <input type="hidden" name="印表機ID" value ="@ViewBag.printerId" />
    <input type="hidden" name="碳粉匣" value="@ViewBag.cartId" />

    <div class="modal-footer modal-footer-primary">
        <button type="submit" class="btn btn-default">儲存</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
    </div>
}
