@model MISAssist.Models.印表機
@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("_Create", "Printers"))
{
    @Html.AntiForgeryToken()

    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header modal-header-primary">
                    <button type="button" class="close" aria-label="Close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">印表機［新增］</h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.使用單位, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.使用單位, (List<SelectListItem>)ViewBag.dept, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.使用單位, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.廠牌, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.廠牌, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.廠牌, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.型號, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.型號, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.型號, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.類別, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.類別, (List<SelectListItem>)ViewBag.ptype, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.類別, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.購買廠商, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.購買廠商, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.購買廠商, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.價格, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.價格, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.價格, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.購買日期, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.購買日期, new { htmlAttributes = new { @class = "form-control", type = "date", @Value = DateTime.Now.ToString("yyyy-MM-dd") } })
                                @Html.ValidationMessageFor(model => model.購買日期, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.IP位址, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.IP位址, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.IP位址, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.碳粉匣_黑, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.碳粉匣_黑, new { htmlAttributes = new { @class = "form-control", style = "color:black;font-weight:bold" } })
                                @Html.ValidationMessageFor(model => model.碳粉匣_黑, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.碳粉匣_青, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.碳粉匣_青, new { htmlAttributes = new { @class = "form-control", style = "color:deepskyblue;font-weight:bold" } })
                                @Html.ValidationMessageFor(model => model.碳粉匣_青, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.碳粉匣_紅, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.碳粉匣_紅, new { htmlAttributes = new { @class = "form-control", style = "color:red;font-weight:bold" } })
                                @Html.ValidationMessageFor(model => model.碳粉匣_紅, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.碳粉匣_黃, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.碳粉匣_黃, new { htmlAttributes = new { @class = "form-control", style = "color:orange;font-weight:bold" } })
                                @Html.ValidationMessageFor(model => model.碳粉匣_黃, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.備註, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.備註, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.備註, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer modal-footer-primary">
                    <button type="submit" class="btn btn-default">儲存</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                </div>
            </div>
        </div>
    </div>
}

